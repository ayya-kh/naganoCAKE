<div class="row">
  <h3 class="title">商品編集</h3>
</div>

<div class="row">
  <div class="item-form">
    <%= form_for([:admin, @item]) do |f| %>

      <div class="col-xs-5">
        <div class="field">
          <%= f.label :image, "商品画像", class: "col-sm-4 col-form-label" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="field">
          <%= f.label :name, "商品名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, class: "form-control", style: "width: 300px;" %>
        </div>

        <div class="field label-top">
          <%= f.label :introduction, "商品説明", class: "col-sm-3 control-label" %>
          <%= f.text_area :introduction, class: "form-control", rows: 7, style: "width: 300px;" %>
        </div>

        <div class="field">
          <%= f.label :genre_id, "ジャンル", class: "col-sm-3 control-label" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択してください"}, {class: "form-control"} %>
        </div>

        <div class="field">
          <%= f.label :price, "税抜価格", class: "col-sm-3 control-label" %>
          <%= f.text_field :price, class: "form-control", style: "width: 300px;" %>
        </div>

        <div class="field">
          <%= f.label :is_active, "販売ステータス", class: "col-sm-3 control-label" %>
          <div class="form-check form-check-inline">
            <%= f.radio_button :is_active, true, class: "form-check-input" %>
            <%= f.label :is_active, "販売中", value: true, class: "form-check-label" %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :is_active, false, class: "form-check-input" %>
            <%= f.label :is_active, "販売停止中", value: false, class: "form-check-label" %>
          </div>
        </div>

        <div class="actions text-right">
          <%= f.submit "変更を保存", class: "btn-lg btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
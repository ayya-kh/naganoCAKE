<div class="container">
  <div class="row mb-3">
    <div class="col-12">
      <h2>商品詳細</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 px-3 mb-3 d-flex">
    		<%= image_tag @item.get_image(100,100) %>
    </div>

    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <td style="width:30%">商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td class="text-break">
            <%= @item.introduction %>
          </td>
        </tr>
        <tr>
          <td>ジャンル</td><!-- 製作していない 予備コード -->
          <td>
            <%= @item.genre_id %>
          </td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td>
            <%= "#{@item.tax_price.to_s(:delimited)} (#{@item.price.to_s(:delimited)}) 円" %>
          </td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
            	<span class="text-success">販売中</span>
      			<% else %>
  	    			<span class="text-danger">販売停止中</span>
  		    	<% end %>
  		    </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
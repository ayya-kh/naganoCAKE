<div class="row">
  <div class="mx-5 col-xs-10 col-xs-offset-1">

    <div class="row">
      <h3 class="title">商品一覧</h3>
    </div>

    <div class="row">
    	<%= link_to new_admin_item_path do %>
    		<i class="fas fa-plus"></i>
    	<% end %>
    </div>

    <table class="table">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
					<tr>
						<td class="info col-xs-1"><%= item.id %></td>
						<td class="text-left"><%= link_to item.name, admin_item_path(item.id) %></td>
						<td><%= item.price.to_s(:delimited) %></td>
						<td><%= item.genre_id %></td>
						<td>
						  <% if item.is_active == true %>
						  <td>販売中</th>
						  <% else %>
							<td class="font-red">販売停止中</td>
						  <% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>
</div>
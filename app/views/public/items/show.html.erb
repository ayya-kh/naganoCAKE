<div class="container">
  <div class="row">
    <div class="col-md-6 pt-4 px-3 d-flex">
      <%= image_tag @item.image, size: "240x300", class: "bd-placeholder-img bd-placeholder-img-lg card-img rounded shadow-lg" %>
    </div>
    <div class="col-md-6 pt-4">
      <div class="item-information">
        <h1><%= @item.name %></h1>
        <h3><%= @item.introduction %></h3>
        <h1 class="mt-5">¥ <%= @item.tax_price.to_s(:delimited) %>  <span class="h6">(税込)</span></h1>
      </div>
      <div class="cart_item_add">
        <%= form_with model: @cart_item, url: cart_items_path, local: true, class: "mt-3 form-inline" do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, (1..9), { selected: 1 }, class: "custom-select mb-2" %>
          <%= f.submit "カートに入れる", class: "btn btn-success ml-sm-4 mb-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>